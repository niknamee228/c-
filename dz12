#include <iostream>
#include <string>

using namespace std;

int main() {
    string questions[10] = {
        "1. Какой из следующих операторов используется для присваивания?\n a) ==\n b) =\n c) =/\n d) ===",
        "2. Какой из следующих типов данных используется для хранения дробных чисел?\n a) int\n b) float\n c) char\n d) bool",
        "3. Какой оператор используется для сравнения?\n a) =\n b) ==\n c) ===\n d) <>", 
        "4. Какой из следующих циклов не существует ?\n a) for\n b) while\n c) do-while\n d) foreach",
        "5. Какой из следующих модификаторов доступа является приватным?\n a) public\n b) private\n c) protected\n d) static",
        "6. Что такое указатель в C++?\n a) Переменная, которая хранит адрес другой переменной.\n b) Переменная, которая хранит значение.\n c) Переменная, которая хранит массив.\n d) Переменная, которая не может изменяться.",
        "7. Какой из следующих методов используется для отображения выходных данных на экран?\n a) printf\n b) write\n c) cout\n d) output",
        "8.Какой из следующих типов является ссылочным типом?\n a) int\n b) double\n c) std::string& **\n d)std::vector",
        "9. Что означает `const` перед типом переменной?\n a) Переменная неизменяемая\n b) Переменная имеет значение по умолчанию\n c) Переменная может быть только для чтения\n d) Переменная может быть изменена только в ",
        "10. Что делает ключевое слово new?\n a) Удаляет переменную?;\n b) Выделяет память в стеке;\n c)Выделяет память в куче\n d) Создает статическую переменную;"
    };

    char answers[10] = {'b', 'b', 'b', 'd', 'b', 'a', 'c', 'c', 'a', 'c'};
    char userAnswer;
    int score = 0;

    for(int i = 0; i < 10; i++) {
        cout << questions[i] << endl;
        cout << "Введите ваш ответ (a, b, c, d): ";
        cin >> userAnswer;

        if(tolower(userAnswer) == answers[i]) {
            score++;
        }
    }

    cout << "Вы ответили правильно на " <<score  << " вопросов из 10." << endl;

    if(score >= 5) {
        cout << "Поздравляем Вы прошли тестирование " << endl;
    } else {
        cout << "К сожалению, вы не прошли тестирование." << endl;
    }

    return 0;
}
