using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp7
{
    public class ThreadCounter
    {
        private int _count = 0;
        private readonly object _lockObject = new object();

        public void Increment()
        {
            lock (_lockObject)
            {
                _count++;
            }
        }

        public int GetCount()
        {
            lock (_lockObject)
            {
                return _count;
            }
        }
    }

}
